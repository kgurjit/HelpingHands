    <id="portfolio">
        {{#if data}}
        <div class="row">
            <div class="col-lg-12">
                <div id="map"></div>
            </div>
        </div>
        {{/if}}
        
        <div id="portfolio" class="row listing">
        	{{#data}}
            <div class="col-md-4 col-sm-6 portfolio-item">
                <a href="listing?id={{id}}" class="portfolio-link" data-toggle="modal">
                    <div class="portfolio-hover">
                        <div class="portfolio-hover-content">
                            <i class="fa fa-plus fa-3x"></i>
                        </div>
                    </div>
                    <img src="{{image}}" class="img-responsive" alt="">
                </a>
                <div class="portfolio-caption">
                    <h4>{{title}}</h4>
                    <p class="text-muted">{{details}}</p>
                </div>
            </div>
            {{else}}
            <h3 class="text-center"><em class="text-danger">Your search did not return any results!</em></h3>
            {{/data}}
        </div>
        
    <div class="hidden" id="data">{{toJSON data}}</div>